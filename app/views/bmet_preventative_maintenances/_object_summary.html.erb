<div id="object-single-col-box">
  <ul class="toggle-buttons">
    <li class="active"><a href="#view" data-toggle="tab"><%= t(:view).capitalize %></a></li>
    <li><a href="#convert" data-toggle="tab"><%= t(:convert).capitalize %></a></li>  
    <li><a><%= link_to t(:reset).capitalize, '/reset_bmet_preventative_maintenance/'+@bmet_preventative_maintenance.id.to_s, method: :put %> </a></li>
    <% if can? :hide, current_user %>
      <% if @bmet_preventative_maintenance.destroyed? %>
  	  <%= link_to t(:unhide).capitalize, hide_bmet_preventative_maintenance_path(@bmet_preventative_maintenance), title: "Unhide preventative maintenance", rel: "tooltip", method: :put %>
    <% else %>
  	  <%= link_to t(:hide).capitalize, hide_bmet_preventative_maintenance_path(@bmet_preventative_maintenance), title: "Hide preventative maintenance", rel: "tooltip", method: :put %>
    <% end %>
    <% end %>
  </ul>

  <div class="tab-content">
    <div class="tab-pane active " id="view">
    	<%= render :partial => 'object_edit' %>
    </div>
    <div class="tab-pane" id="convert">
    	<%= render :partial => 'bmet_work_orders/object_convert' %>  	
    </div>  
  </div>
</div>
