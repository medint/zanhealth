
<%= form_for(@bmet_preventative_maintenance) do |f| %>
  <% if @bmet_preventative_maintenance.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bmet_preventative_maintenance.errors.count, "error") %> prohibited this bmet_preventative_maintenance from being saved:</h2>
      <ul><% @bmet_preventative_maintenance.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- can put inside the url parameter but shouldn't be able to imposter as another user -->
  <div id="object-form-single-col">

    <div id="field-box_item-id">
      <div class="item-id">
        <%= t(:preventative_maintenance).titlecase %> # <%= @bmet_preventative_maintenance.id %>
      </div>
    </div>
    <div class="field-box">
      <div class="field-type"><%= t(:item).titlecase %></div>
      <div class="field-info">
        <p>
          <% if @bmet_preventative_maintenance.bmet_item !=nil%>
            <%= link_to @bmet_preventative_maintenance.bmet_item.bmet_model.name, @bmet_preventative_maintenance.bmet_item %></br> at
            <%= @bmet_preventative_maintenance.bmet_item.location %>
            <%else%>
            No Item
            <%end%>
        </p></div>
    </div>
    <div class="field-box">
      <div class="field-type"><%= t(:last_date_checked).titlecase %></div>
      <div class="field-info">
        <p><%= @bmet_preventative_maintenance.last_date_checked %></p></div>
    </div>
    <div class="field-box">
      <div class="field-type"><%= t(:next_date).titlecase %></div>
      <div class="field-info">
        <p><%= @bmet_preventative_maintenance.next_date %></p>
      </div>
    </div>
  	<div class="field-box">
      <div class="field-type"><%= t(:days_until).titlecase %></div>
      <div class="field-info">
        <p><%= @bmet_preventative_maintenance.days_until %></p>
      </div>
    </div>

    <div class="field-box">
      <div class="field-type"><%= t(:days).capitalize %></div>
      <div class="field-info"><%= f.number_field :days, :required => true %></div>
    </div>
    <div class="field-box">
      <div class="field-type"><%= t(:weeks).capitalize %></div>
      <div class="field-info"><%= f.number_field :weeks %></div>
    </div>
    <div class="field-box">
      <div class="field-type"><%= t(:months).capitalize %></div>
      <div class="field-info"><%= f.number_field :months %></div>
    </div>  
    <div class="field-box">
      <div class="field-type"><%= t(:description).capitalize %></div>
      <div class="field-info"><%= f.text_area :description, :required => true %></div>
    </div>

    <% if BmetWorkOrder.where("pm_origin_id = ?", @bmet_preventative_maintenance.id) %>
      <div class="field-box">
        <div class="field-type"><%= t(:associated_work_orders).titlecase %></div>
        <div class="field-info">
          <ul><% BmetWorkOrder.where("pm_origin_id = ?", @bmet_preventative_maintenance.id).order(:created_at).reverse_order().each do |wo| %>
            <li><%= link_to t(:work_order).titlecase + " " + wo.id.to_s, "/bmet_work_orders/all/" + wo.id.to_s %></li>
          <% end %>
            </ul></div>
      </div>
    <% end %>

  	<% if can? :update, current_user %>
      	<div class="action_submit">
        		<%= f.submit t(:save_changes).titlecase%>
      	</div>
  	<% end %>
  </div>
<% end %>
