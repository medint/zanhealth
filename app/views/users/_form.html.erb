<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </div>
  <div class="field">
  </div>
  <div class="field">
    <label for="user_password">Password</label><br>
    <input id="user_password" name="user[password]" type="password">
  </div>
  <div class="field">
    <%= f.label :created %><br>
    <%= f.datetime_select :created %>
  </div>
  <div class="field">
    <%= f.label :modified %><br>
    <%= f.datetime_select :modified %>
  </div>
  <div class="field">
    <%= f.label :telephone_num %><br>
    <%= f.number_field :telephone_num %>
  </div>
  <div class="field">
    <%= f.label :language %>
    <select id='user_language' name='user[language]'>
      <option value='english'>English</option>
      <option selected value='swahili'>Swahili</option>
      <option selected value='creole'>Creole</option>
    </select>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
