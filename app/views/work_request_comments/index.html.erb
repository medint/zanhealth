        <td><%= work_request_comment.user_id %></td>
        <td><%= work_request_comment.comment_text %></td>
        <td><%= link_to 'Show', work_request_comment %></td>
        <td><%= link_to 'Edit', edit_work_request_comment_path(work_request_comment) %></td>
        <td><%= link_to 'Destroy', work_request_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
