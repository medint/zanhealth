<h1><%= "#{@language['All Items']}:#{ @language['Detailed View']}" %></h1>

<%= link_to @language['Simple View'], "/bmet_items" %><br>
<%= link_to @language['New Item'], new_bmet_item_path %>
<table>
  <thead>
    <tr>
      <th><%= @language['Asset ID']%></th>
      <th><%= @language['Category']%></th>
      <th><%= @language['Model']%></th>
      <th><%= @language['Serial Number']%></th>
      <th><%= @language['Year Manufactured']%></th>
      <th><%= @language['Funding']%></th>
      <th><%= @language['Date Received']%></th>
      <th><%= @language['Warranty Expire']%></th>
      <th><%= @language['Contract Expire']%></th>
      <th><%= @language['Warranty Notes']%></th>
      <th><%= @language['Service Agent']%></th>
      <th><%= @language['Location']%></th>
      <th><%= @language['Item Type']%></th>
      <th><%= @language['Price']%></th>
      <th><%= @language['Recent History']%></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.asset_id %></td>
        <td><%= item.model.category %></td>
        <td><%= item.model_id %></td>
        <td><%= item.serial_number %></td>
        <td><%= item.year_manufactured %></td>
        <td><%= item.funding %></td>
        <td><%= item.date_received %></td>
        <td><%= item.warranty_expire %></td>
        <td><%= item.contract_expire %></td>
        <td><%= item.warranty_notes %></td>
        <td><%= item.service_agent %></td>
        <td><%= item.department_id %></td>
        <td><%= item.item_type %></td>
        <td><%= item.price %></td>
        <td>
          <% if not item.bmet_item_histories.empty? %>
          <%= item.bmet_item_histories[0].remarks %>
          <% end %>
        </td>
        <td><%= link_to @language['Show'], item %></td>
        <td><%= link_to @language['Edit'], edit_bmet_item_path(item) %></td>
        <td><%= link_to @language['Destroy'], item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
     </tr>
    <% end %>
  </tbody>
</table>

<br>

