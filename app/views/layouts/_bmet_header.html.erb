<header id="left-nav">
  <div id="logo"></div>
  <div id="app_type_label"> Zanhealth BMET </div>
  <div id="login">
    <div id="bottom-buttons">
		<% if can? :edit_user, current_user %>
        <%= link_to current_user.name, edit_user_registration_path, :id => "user_name" %></br>
<% else %>
	<span id="user_name"> <%= current_user.name %></span></br>
<% end %>
        <%= link_to current_user.facility.name, "#", :id => "current_fac_name" %></br>
