<header id="left-nav">
  <div id="logo"></div>
  <div id="app_type_label"> Zanhealth Facilities </div>
  <div id="login">
    <div id="bottom-buttons">
		<% if can? :edit_user, current_user %>
      <%= link_to current_user.name, edit_user_registration_path, :id => "current_user_name" %></br>
  	<% else %>
  		<span id="current_user_name"> <%= current_user.name %></span></br>
  	<% end %>
		<div id="current_fac_name"><%= current_user.facility.name %></div>
    <span id="logout_button"><%= link_to t(:logout).capitalize, destroy_user_session_path, :method => :delete %></span>      
    </div>
  </div>
  <ul id="left-nav_ul">
    <hr>
    <%= link_to(facility_work_orders_url+"/unhidden") do %>
    <li class="left-nav_ul_li" >
      <div id="work-order-icon"></div>
      <div class="wrapper">
        <div class="title">
          <%= t(:work_orders).titlecase %>
        </div>
      </div>
      <%= image_tag("rightarrow_white.png", class: "right-arrow") %>
    </li>
    <%end%>

    <hr>
    <%= link_to(facility_preventative_maintenances_url+"/unhidden") do %>
    <li class="left-nav_ul_li">
      <div id="preventative-maintenance-icon"></div>
      <div class="wrapper">
        <div class="title">
          <%= t(:preventative_maintenance).titlecase %>
        </div>
      </div>
      <%= image_tag("rightarrow_white.png", class: "right-arrow") %>
    </li>
    <% end %>

    <hr>
    <%= link_to(facility_work_requests_url+"/unhidden") do %>
    <li class="left-nav_ul_li">
      <div id="inbox-icon"></div>
      <div class="wrapper">
        <div class="title">
          <%= t(:work_requests).titlecase %>
        </div>
      </div>
      <%= image_tag("rightarrow_white.png", class: "right-arrow") %>
    </li>
    <%end%>
    
    <hr>
    <%= link_to("/facility_dashboard") do %>
    <li class="left-nav_ul_li" >
      <div id="work-order-icon"></div>
      <div class="wrapper">
        <div class="title">
          <%= t(:dashboard).capitalize %>
        </div>
      </div>
      <%= image_tag("rightarrow_white.png", class: "right-arrow") %>
    </li>
    <%end%>
    <hr>

  </ul>
      <div id="language-icons">
        <a href='?language=english'>English</a>
        <a href='?language=swahili'>Swahili</a> 
        <a href='?language=creole'>Creole</a> 
      </div>

      <div id= "settings-icon">
        <a href='/settings'>Facility Settings</a>
      </div>

</header>
