<div id="object-single-col-box">
  <%= form_for @facility_work_order do |f| %>
    <% if @facility_work_order.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@facility_work_order.errors.count, "error") %> prohibited this facility_work_order from being saved:</h2>
            <ul> 
              <% @facility_work_order.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
        </div>x
    <% end %>

    <div id="object-form-single-col">

      <div class="field-box">
          <div class="field-type"><%= t(:status).capitalize %></div>
          <div class="field-info">
			  <%= f.select :status, @status, :required => true  %>
          </div>
      </div>  
      <div class="field-box">
        <div class="field-type"><%= t(:owner).capitalize %></div>
        <div class="field-info"><%= f.collection_select :owner_id, @users, :id, :name %></div>
      </div>
      <div class="field-box">
        <div class="field-type"><%= t(:department).capitalize %></div>
        <div class="field-info"><%= f.collection_select :department_id, @departments, :id, :name %></div>
      </div>

      <div class="field-box">
        <div class="field-type"><%= t(:expected_date_of_completion).titlecase %></div>
        <div class="field-info"><%= f.date_select :date_expire %></div>
      </div>    
      <div class="field-box">
        <div class="field-type"><%= t(:description).capitalize %><br></div>
        <div class="field-info"><%= f.text_area :description, :required => true%></div>
      </div>
      <div class="field-box">
        <div class="field-type"><%= t(:cause_description).titlecase %><br></div>
        <div class="field-info"><%= f.text_area :cause_description %></div>
      </div>
      <div class="field-box">
        <div class="field-type"><%= t(:action_taken).titlecase %><br></div>
        <div class="field-info"><%= f.text_area :action_taken%></div>
      </div>

      <div class="field-box">
        <div class="field-type"><%= t(:prevention_taken).titlecase %><br></div>
        <div class="field-info"><%= f.text_area :prevention_taken%></div>
      </div>

      <div class="action_submit">
            <%= f.submit t(:create).capitalize %>
      </div>
    </div>
  <%end%>
</div>
