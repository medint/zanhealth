<div id='left-top'>
  <div id="top-dropdown">
    Filter : <div class="dropdown">
      <a id="facworkorder_progress" role="button" data-toggle="dropdown" href="#">
         Select Status
         <b class="caret"></b>
      </a>
      <ul class="dropdown-menu dropdown-menu-form" role="menu" aria-labelledby="facworkorder_progress">
       <li>
             <input id="cbox1" type="checkbox" name="unstarted" value="unstarted">Unstarted
       </li>
       <li>
             <input type="checkbox" name="inprogress" value="inprogress">In Progress
       </li>
       <li>
             <input type="checkbox" name="completed" value="completed">Completed
       </li>
      </ul>
    </div>
    &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp 
    Sort : <div class="dropdown">
      <a id="facworkorder_sort" role="button" data-toggle="dropdown" href="#">
        Select Attribute
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu dropdown-menu-form" role="menu" aria-labelledby="facworkorder_sort">
       <li>Date Created</li>
       <li>Date Started</li>
       <li>Requester</li>
       <li>Owner</li>
       <li>Status</li>
      </ul>
    </div>
  </div>

  <div id="top-button">
    <a id='print-button'></a>
    <a href= "<%=new_facility_work_order_path%>" id='add-button'></a>
  </div>
</div>