<div id='left-top'>
  <div id="top-dropdown">
    Filter : <div class="dropdown">
      <a id="facworkorder_progress" role="button" data-toggle="dropdown" href="#">
         Select Status
         <b class="caret"></b>
      </a>
      <ul class="dropdown-menu dropdown-menu-form" role="menu" aria-labelledby="facworkorder_progress">
       <li>
             <input id="cbox0" type="checkbox" name="unstarted" value="unstarted">Unstarted
       </li>
       <li>
             <input id="cbox1" type="checkbox" name="inprogress" value="inprogress">In Progress
       </li>
       <li>
             <input id="cbox2" type="checkbox" name="completed" value="completed">Completed
       </li>
      </ul>
    </div>
    &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp 
    Sort : <div class="dropdown">
      <a id="facworkorder_sort" role="button" data-toggle="dropdown" href="#">
        Select Attribute
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu dropdown-menu-form" role="menu" aria-labelledby="facworkorder_sort">
       <div>
       <button onclick = "sort_by_date_created()">Date Created</button>
       </div>
       <div>
       <button onclick = "sort_by_date_started()">Date Started</button>
       </div>
       <div>
       <button onclick = "sort_by_requester()">Requester</button>
       </div>
       <div>
       <button onclick = "sort_by_owner()">Owner</button>
       </div>
       <div>
       <button onclick = "sort_by_status()">Status</button>
       </div>
      </ul>
    </div>
  </div>

  <div id="top-button">
    <a id='print-button'></a>
    <a href= "<%=new_facility_work_order_path%>" id='add-button'></a>
  </div>
</div>