<div id="object-single-col-box">
  <ul class="toggle-buttons">
    <li class="active"><a href="#view" data-toggle="tab"><%= @language['View'] %></a></li>
    <li><a href="#convert" data-toggle="tab"><%= @language['Convert'] %></a></li>  
    <% if can? :hide, current_user %>
    	  <% if @facility_preventative_maintenance.destroyed? %>
  	  <%= link_to @language["Unhide"], hide_facility_preventative_maintenance_path(@facility_preventative_maintenance), title: "Unhide preventative maintenance", rel:"tooltip", method: :put, :required => true %>
    <% else %>
  	  <%= link_to @language["Hide"], hide_facility_preventative_maintenance_path(@facility_preventative_maintenance), title: "Hide preventative maintenance", rel:"tooltip", method: :put, :required => true %>
    <% end %>
    <% end %>
  </ul>

  <div class="tab-content">
    <div class="tab-pane active " id="view">
    	<%= render :partial => 'object_edit' %>
    </div>
    <div class="tab-pane" id="convert">
    	<%= render :partial => 'facility_work_orders/object_convert' %>  	
    </div>  
  </div>
</div>
