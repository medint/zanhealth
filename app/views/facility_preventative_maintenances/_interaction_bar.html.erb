<div id='left-top'>
  <div id="top-dropdown">

    <%= @language['Sort'] %>: <div class="dropdown">
      <a id="facworkorder_sort" role="button" data-toggle="dropdown" href="#">
        <%= @language['Select Attribute'] %>
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu dropdown-menu-form" role="menu" aria-labelledby="facworkorder_sort">
       <div>
       <a onclick = "sort_by_date('datedue')">
        <%= @language['Due Date'] %>
       </a>
       </div>
       <div>
       <a onclick = "sort_by_num('dayssince')">
        <%= @language['Days Since'] %>
       </a>
       </div>   
      </ul>
    </div>
    &nbsp&nbsp&nbsp&nbsp
    <%= form_tag search_facility_preventative_maintenances_path, method: 'get' do %>
      <%= text_field_tag :q, params[:q] %>
      <%= submit_tag :search %>
    <% end %>
  </div>

  <div id="top-button">
    <a href= "<%=new_facility_preventative_maintenance_path%>" id='add-button'></a>
  </div>

  <%= "View" %>
  <div class="dropdown">
	  <a id=facworkorder_view" role="button" data-toggle="dropdown" href="#">
		  Select View:
		  <b class="caret"></b>
	  </a>
	  <ul class="dropdown-menu dropdown-menu-form" role="menu" aria-labelledby="facworkorder_view">
		  <div>
			  <a href="<%= facility_preventative_maintenances_url+"/unhidden" %>">
				  Visible Work Orders
			  </a>
		  </div>
		  <div>
			  <a href="<%= facility_preventative_maintenances_url+"/hidden" %>">
				  Hidden Work Orders
			  </a>
		  </div>
		  <div>
			  <a href="<%= facility_preventative_maintenances_url+"/all" %>">
				  All Work Orders
			  </a>
		  </div>
	  </ul>
  </div>

  <div id="top-button">
	  <%= link_to "Export Data", facility_preventative_maintenances_url+"/download" %>
  </div>
</div>
