
<%= form_for(@bmet_model) do |f| %>
  <% if @bmet_model.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bmet_model.errors.count, "error") %> prohibited this bmet_model from being saved:</h2>
      <ul><% @bmet_model.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- can put inside the url parameter but shouldn't be able to imposter as another user -->
  <div id="object-form-single-col">

    <div id="field-box_item-id">
      <div class="item-id">
        <%= @language['Model'] %>
    </div>
    
    <div class="field">
      <%= @language['Category'] %><br>
      <%= f.text_field :category %>
    </div>
    <div class="field">
      <%= @language['Manufacturer Name'] %><br>
      <%= f.text_field :manufacturer_name %>
    </div>
    <div class="field">
      <%= @language['Model Name'] %><br>
      <%= f.text_field :model_name %>
    </div>          


    <div class="field-box">
      <div class="field-type"><%= @language['Created At'] %></div>
      <div class="field-info">
        <p><%= @bmet_model.created_at %></p></div>
    </div>
    
   
    <div class="actions">
      <%= f.submit @language['Save Changes']%>
    </div>
  </div>
<% end %>