
<div id="object-single-col-box">
  <%= form_for(@bmet_model) do |f| %>
    <% if @bmet_model.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@bmet_model.errors.count, "error") %> prohibited this bmet_model from being saved:</h2>
        <ul><% @bmet_model.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>    

      <div id="object-form-single-col">
        <div class="field-box">
          <div class="field-type"><%= t(:item_group).capitalize %><br></div>
          <div class="field-info"><%= f.collection_select :item_group_id, @item_groups, :id, :name %></div>
        </div>        
        <div class="field-box">
          <div class="field-type"><%= t(:category).capitalize %></div>
          <div class="field-info"><%= f.text_field :category, :required => true %></div>
        </div>
        <div class="field-box">
          <div class="field-type"><%= t(:manufacturer).capitalize %><%= t(:name).capitalize %></div>
					<div class="field-info">
            <%= f.text_field :manufacturer_name %>
          </div>
        </div>
        <div class="field-box">
          <div class="field-type"><%= t(:model).capitalize %><%= t(:name).capitalize %></div>
          <div class="field-info">
            <%= f.text_field :model_name %>
        </div>        
        <div class="action_submit">
          <%= f.submit t(:save).capitalize %>
        </div>
      </div>  
  <% end %>
</div>