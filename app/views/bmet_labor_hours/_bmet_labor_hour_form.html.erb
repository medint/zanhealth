<div class='additional-details_form-div'>
  <hr class="additional-details_hr">

  <%= form_for(@bmet_labor_hour) do |f| %>
    <% if @bmet_labor_hour.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@bmet_labor_hour.errors.count, "error") %> prohibited this bmet_labor_hour from being saved:</h2>
        <ul><% @bmet_labor_hour.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div id="labor_technician-title">
      <%= t(:technician).capitalize %>
    </div>
    <div id="labor_date-title">
      <%= t(:worked_on).titlecase %>
    </div >
    <div id="labor_hour-title">
      <%= t(:duration).capitalize %>
    </div>
    
    <div id="additional-detail_labor_tech">
      <%= f.collection_select :technician_id, @users, :id, :name, :id => "technician" %>        
    </div>
    <div id="additional-detail_labor_date">      
      <%= f.date_select :date_started, :required => true, use_short_month: true %>    
    </div>
    <div id="additional-detail_labor_hours">    
      <%= f.number_field :duration, :required => true, :placeholder => t(:hr).capitalize %>
    </div>

    <div class="additional-detail_actions">
      <%= f.submit :value => ">"%>
    </div>

      
      
      
     
      <div class="field">
        <%= f.hidden_field :bmet_work_order_id, value: @bmet_work_order.id %>
      </div>

      
  <% end %>
</div>