<div class='additional-details_form-div'>
  <hr class="additional-details_hr">
  <%= form_for(@bmet_cost) do |f| %>
  <% if @bmet_cost.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bmet_cost.errors.count, "error") %> prohibited this bmet_cost from being saved:</h2>
      <ul><% @bmet_cost.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div id="additional-detail_cost_name">
    <%= f.text_area :name, :required => true, :placeholder => @language['Name'] %>
  </div>
  <div id="additional-detail_cost_quantity">

    <%= f.number_field :unit_quantity, :required => true, :placeholder => @language['Quantity'] %>
  </div>
  <div id="additional-detail_cost_amount">
    <%= f.number_field :cost, :required => true, :placeholder => @language["Cost"] %>
  </div>
 
  <div class="field">
    <%= f.hidden_field :bmet_work_order_id, value: @bmet_work_order.id %>
  </div>

  <div class="additional-detail_actions">
    <%= f.submit :value => ">"%>
  </div>
<% end %>
</div>