<h1><%= "#{t(:listing).capitalize} #{t(:item_histories).titlecase}" %></h1>

<table>
  <thead>
    <tr>
      <th><%= t(:item).capitalize %></th>
      <th><%= t(:date_added).titlecase  %></th>
      <th><%= t(:status).capitalize %></th>
      <th><%= t(:utilization).capitalize %></th>
      <th><%= t(:remarks).capitalize %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @item_histories.each do |item_history| %>
      <tr>
        <td><%= item_history.bmet_item_id %></td>
        <td><%= item_history.datetime %></td>
        <td><%= item_history.status %></td>
        <td><%= item_history.utilization %></td>
        <td><%= item_history.remarks %></td>
        <td><%= link_to t(:show).capitalize, item_history %></td>
        <td><%= link_to t(:edit).capitalize, edit_bmet_item_history_path(item_history) %></td>
        <td><%= link_to t(:destroy).capitalize, item_history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

