<%= form_for @bmet_work_request, { url:  bmet_work_requests_public_create_path } do |f| %>
  <% if @bmet_work_request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bmet_work_request.errors.count, "error") %> prohibited this bmet_work_request from being saved:</h2>
<ul> <% @work_request.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <input type="hidden" name="bmet_work_request[facility_id]" value=<%= @bmet_work_request.facility_id %>> </input>  
  
  <div class = "work_request_form-short">
    <%= t(:requester).capitalize %><br>
    <%= f.text_area :requester, :required => true %>
  </div>

  <div class = "work_request_form-short">
  	<%= t(:department).capitalize %><br>
  	<%= f.text_area :department, :required => true %>
  </div>

  <div class="work_request_form-short">
        <%= t(:asset).capitalize + " " + t(:id).upcase %><br>
        <%= f.text_area :asset_id, :required => true%>
  </div>
  <div class="work_request_form-long">
    <%= t(:location).capitalize %><br>
    <%= f.text_area :location, :required => true %>
  </div>

  <div class = "work_request_form-short">
  	<%= t(:telephone_number).titlecase %><br>
  	<%= f.number_field :phone, :required => true %>
  </div>

  <div class = "work_request_form-short">
  	<%= t(:email).capitalize %><br>
  	<%= f.email_field :email, :required => true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}' %>
  </div>

  <div class = "work_request_form-long">
    <%= t(:description).capitalize %><br>
    <%= f.text_area :description, :required => true %>
  </div>

  <div class="actions">
    <%= recaptcha_tags %>
    <%= f.submit t(:create_bmet_work_request).titlecase %>
  </div>
<% end %>