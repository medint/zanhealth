<div id='left-top'>
  <div id="top-dropdown">
    
    &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp 
    <%= t(:sort).capitalize %>: <div class="dropdown">
      <a id="facworkorder_sort" role="button" data-toggle="dropdown" href="#">
        <%= t(:select_attribute).titlecase %>
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu dropdown-menu-form" role="menu" aria-labelledby="facworkorder_sort">
         <div>
         <a onclick = "attrsort('requester', 'desc')">
          <%=t(:requester).capitalize%>
         </a>
         </div>
         <div>
         <a onclick = "attrsort('department', 'desc')">
          <%=t(:department).capitalize%>
         </a>
         </div>
         <div>
         <a onclick = "sort_by_num('ID')">
          <%=t(:id).capitalize%>
         </a>
         </div>
      </ul>
    </div>
    &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp 
	<%= "#{t(:view).capitalize}" %>
	<div class="dropdown">
		<a id="facworkorder_sort" role="button" data-toggle="dropdown" href="#">
			<%= "#{t(:select).capitalize} #{t(:view).capitalize}:" %>
			<b class="caret"></b>
		</a>
		<ul class="dropdown-menu dropdown-menu-form" role="menu" aria-labelledby="facworkorder_sort">
			<div>
				<a href="<%= bmet_work_requests_url+"/unhidden" %>">
					<%= "#{t(:visible).capitalize} #{t(:work_requests).titlecase}" %>
				</a>
			</div>
			<div>
				<a href="<%= bmet_work_requests_url+"/hidden" %>">
					<%= "#{t(:hidden).capitalize} #{t(:work_requests).titlecase}" %>
				</a>
			</div>
			<div>
				<a href="<%= bmet_work_requests_url+"/all" %>">
					<%= "#{t(:all).capitalize} #{t(:work_requests).titlecase}" %>
				</a>
			</div>
		</ul>
	</div>
	&nbsp&nbsp&nbsp&nbsp
    <%= form_tag search_bmet_work_requests_path, method: 'get' do %>
    <%= text_field_tag :q, params[:q] %>
    <%= submit_tag :search %>
    <% end %>
  </div>
  <div id="top-button">
    <%= link_to "", '#', onclick: "printmainpage(); return false;", :id => "print-button" %>
    <a href= "<%=new_bmet_work_request_path%>" id='add-button'></a>
    <%= link_to t(:export_data).titlecase, bmet_work_requests_url+"/download" %>
  </div>
</div>
