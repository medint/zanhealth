<%= form_for(@bmet_work_request) do |f| %>
  <% if @bmet_work_request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bmet_work_request.errors.count, "error") %> prohibited this bmet_work_request from being saved:</h2>
<ul> <% @work_request.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
    <!-- can put inside the url parameter but shouldn't be able to imposter as another user -->
    <% if params[:action] == 'new' %>
        <div class="work_request_form-field">
        <input type="hidden" name="bmet_work_request[requester_id]" value=<%= session[:user] %>> </input>
        </div>
    <% elsif params[:action] == 'edit' %>
    <% end %>
    <div id="object-form-single-col">
      <% if @bmet_work_request.wo_convert_id %>
        <div class="field-box">
          <div class="field-type"><%= @language['Converted WO Order'] %></div>
          <div class="field-info">
              Converted to 
              <%= link_to @language['Work Request']+' '+@bmet_work_request.wo_convert_id, 
                bmet_work_orders_path+'/all/'+@bmet_work_request.wo_convert_id%>
              On 
              <%= @bmet_work_request.converted_at.try(:strftime,"%^b %d, %Y") %>
           </div>
          <%= link_to @language['Work Order']+' '+work_order_id, bmet_work_orders_path+'/all/'+work_order_id %>
        </div>      
      <% end %>
      <div class="field-box">
        <div class="field-type"><%= @language['Requester'] %></div>
        <div class="field-info"><%= f.text_area :requester, :required => true %></div>
      </div>
      <div class="field-box">
        <div class="field-type"><%= @language['Department'] %></div>
        <div class="field-info"><%= f.text_area :department, :required => true %></div>
      </div>
      <div class="field-box">
        <div class="field-type"><%= @language['Location'] %><br></div>
        <div class="field-info"><%= f.text_area :location, :required => true%></div>
      </div>
      <div class="field-box">
        <div class="field-type"><%= @language['Telephone number'] %><br></div>
        <div class="field-info"><%= f.number_field :phone, :required => true %></div>
      </div>

      <div class="field-box">
        <div class="field-type"><%= @language['Email'] %><br></div>
        <div class="field-info"><%= f.text_area :email, :required => true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}'%></div>
      </div>

      <div class="field-box">
        <div class="field-type"><%= @language['Description'] %><br></div>
        <div class="field-info"><%= f.text_area :description, :required => true%></div>
      </div>

      <div class="action_submit">
        <%= f.submit @language['Create Facility Work Request'] %>
      </div>
    </div>

<% end %>