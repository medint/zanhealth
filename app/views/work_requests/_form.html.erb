<%= form_for(@work_request) do |f| %>
  <% if @work_request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@work_request.errors.count, "error") %> prohibited this work_request from being saved:</h2>
<ul> <% @work_request.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- can put inside the url parameter but shouldn't be able to imposter as another user -->
  <% if params[:action] == 'new' %>
      <div class="field">
      <input type="hidden" name="work_request[requester_id]" value=<%= session[:user] %>> </input>
      </div>
  <% elsif params[:action] == 'edit' %>
  <% end %>
  <div class="field">
     <%= f.label :owner_id %><br>
     <%= f.collection_select :owner_id, User.all, :id, :name %>
  </div>

  <div class="field">
    <%= f.label :date_requested %><br>
    <%= f.datetime_select :date_requested %>
  </div>
  <div class="field">
    <%= f.label :date_expire %><br>
    <%= f.datetime_select :date_expire %>
  </div>
  <div class="field">
    <%= f.label :date_completed %><br>
    <%= f.datetime_select :date_completed %>
  </div>
  <div class="field">
    <%= f.label :item_id %><br>
    <%= f.collection_select :item_id, Item.all, :id, :tagname %>
  </div>
  <div class="field">
    <%= f.label :request_type %><br>
    <%= f.number_field :request_type %>
  </div>
  <div class="field">
    <%= f.label :cost %><br> <%= f.number_field :cost %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.number_field :status %>
  </div>
  <div class="field">
    <%= f.label :cause_description %><br>
    <%= f.text_area :cause_description %>
  </div>
  <div class="field">
    <%= f.label :action_taken %><br>
    <%= f.text_area :action_taken %>
  </div>
  <div class="field">
    <%= f.label :prevention_taken %><br>
    <%= f.text_area :prevention_taken %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
