      <tbody>
        <% @labor_hours.each do |labor_hour| %>
          <tr>
            <td><%= labor_hour.id %></td>
            <td><%= labor_hour.date_started%></td>
            <td><%= labor_hour.duration%></td>
            <td><%= labor_hour.technician_id%></td>
            <td><%= labor_hour.work_request_id%></td>
