<div class='wr'>
  <%= link_to @language['Edit'], edit_work_request_path(@work_request) %>
  <div class='attributes'>
    <div class='left-attributes'>
      <p id="notice"><%= notice %></p>

      <p>
        <strong><%= @language['Date Requested'] %>:</strong>
        <%= @work_request.date_requested %>
      </p>

      <p>
        <strong><%= @language['Date Expires'] %>:</strong>
        <%= @work_request.date_expire %>
      </p>

      <p>
        <strong><%= @language['Date Completed'] %>:</strong>
        <%= @work_request.date_completed %>
      </p>

      <p>
        <strong><%= @language['Request Type'] %>:</strong>
        <%= @work_request.request_type %>
      </p>

      <p>
        <strong><%= @language['Item'] %>:</strong>
        <%= @work_request.item %>
      </p>

      <p>
        <strong><%= @language['Cost'] %>:</strong>
        <%= @work_request.cost %>
      </p>

      <p>
        <strong><%= @language['Description'] %>:</strong>
        <%= @work_request.description %>
      </p>

      <p>
        <strong><%= @language['Owner'] %>:</strong>
        <%= @work_request.owner_id %>
      </p>

      <p>
        <strong><%= @language['Requester'] %>:</strong>
        <%= @work_request.requester_id %>
      </p>

      <p>
        <strong><%= @language['Cause Description'] %>:</strong>
        <%= @work_request.cause_description %>
      </p>

      <p>
        <strong><%= @language['Action Taken'] %>:</strong>
        <%= @work_request.action_taken %>
      </p>

      <p>
        <strong><%= @language['Prevention Taken'] %>:</strong>
        <%= @work_request.prevention_taken %>
      </p>
    </div>

    <div class='right-attributes'>
      <p class='status'>
        <strong><%= @language['Status'] %>:</strong>
        <%= @work_request.status %>
      </p>
    </div>
  </div>
  <p> <span class="comment-title"> <%= @language['Recent Comments'] %> </span>
  <form class="create-comment" action="/work_request_comments/new" method="GET"> <input type="hidden" name="id" value=<%= @work_request.id %>> </input> <input type="submit" value=<%= '+ '+@language['Comment'] %> />
  </form>
  </p>
  <div class="comment"> 
	  <table>
		  <thead>
			  <th class="comment-table-header"><%= @language['Time Created'] %></th>
			  <th class="comment-table-header"><%= @language['Last Updated'] %></th>
			  <th class="comment-table-header"><%= @language['User ID'] %> </th>
			  <th><%= @language['Content'] %> </th>
		  </thead>
		  <tbody>
			  <% @wr_comment.each do |comment| %>
				  <tr>
					  <td> <%= comment.created_at %> </td>
					  <td> <%= comment.updated_at %> </td>
					  <td> <%= comment.user_id %> </td>
					  <td> <%= comment.comment_text %> </td>
				  </tr>
			  <% end %>
		  </tbody>
	  </table>
  </div>
  <div class="comment">
    <%= link_to "+ #{@language['Labor Hour']}", new_labor_hour_path %>
    <table>
      <thead>
        <tr>
          <th><%= @language['ID']%></th>
          <th><%= @language['Date Started']%></th>
          <th><%= @language['Duration']%></th>
          <th><%= @language['Technician ID']%></th>
          <th><%= @language['Work Request ID']%></th>

         <!--
          <th>Date requested</th>
