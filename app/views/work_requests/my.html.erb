<h2>My Requests</h2>



<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Item ID</th>
      <th>Serial Number</th>
      <th>Manufacturer</th>
      <th>Category</th>
      <th>Location</th>
      <th>Priority</th>
      <th>Date Requested</th>
    </tr>
  </thead>

  <tbody>
    <% @work_requests.each do |work_request| %>
      <tr>
        <td><%= work_request.id %></td>
        <td><%= work_request.item_id %></td>
        <td><%= work_request.item.serial_number %></td>
        <td><%= ["What is 'Manufacturer'?", 'work_request.manufacturer'][0] %></td>
        <td><%= ["What is 'Category'?", 'work_request.item.category'][0] %></td>
        <td><%= work_request.item.location.room + "<< How should we format a location?" %></td>
        <td><%= work_request.priority %></td>
        <td><%= work_request.date_requested %></td>
        <td><%= link_to 'Edit', edit_work_request_path(work_request) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

