<div id="object-form_top">
  <%= form_for @bmet_work_order do |f| %>
    <% if @bmet_work_order.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@bmet_work_order.errors.count, "error") %> prohibited this bmet_work_order from being saved:</h2>
            <ul> 
              <% @bmet_work_order.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
        </div>x
    <% end %>

    <div id="object-form-single-col">

      <div class="field-box">
          <div class="field-type"><%= @language['Status'] %></div>
          <div class="field-info">
			  <%= f.select :status, @status, :required => true  %>
          </div>
      </div>  
      <div class="field-box">
        <div class="field-type"><%= @language['Owner'] %></div>
        <div class="field-info"><%= f.collection_select :owner_id, @users, :id, :name %></div>
      </div>
      <div class="field-box">
        <div class="field-type"><%= @language['Department'] %></div>
        <div class="field-info"><%= f.collection_select :department_id, @departments, :id, :name %></div>
      </div>

      <div class="field-box">
        <div class="field-type"><%= @language['Date Expires'] %></div>
        <div class="field-info"><%= f.date_select :date_expire %></div>
      </div>    
      <div class="field-box">
        <div class="field-type"><%= @language['Description'] %><br></div>
        <div class="field-info"><%= f.text_area :description, :required => true%></div>
      </div>
      <div class="field-box">
        <div class="field-type"><%= @language['Cause Description'] %><br></div>
        <div class="field-info"><%= f.text_area :cause_description, :required => true %></div>
      </div>

      <div class="field-box">
        <div class="field-type"><%= @language['Action Taken'] %><br></div>
        <div class="field-info"><%= f.text_area :action_taken%></div>
      </div>

      <div class="field-box">
        <div class="field-type"><%= @language['Prevention Taken'] %><br></div>
        <div class="field-info"><%= f.text_area :prevention_taken%></div>
      </div>

      <div class="actions">
            <%= f.submit @language['Create'] %>
      </div>
    </div>
  <%end%>
