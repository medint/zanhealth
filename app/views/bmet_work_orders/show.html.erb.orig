<div class='wr'>
  <%= link_to @language['Edit'], edit_bmet_work_order_path(@bmet_work_order) %>
  <div class='attributes'>
    <div class='left-attributes'>
      <p id="notice"><%= notice %></p>

      <p>
        <strong><%= @language['Date Requested'] %>:</strong>
        <%= @bmet_work_order.date_requested %>
      </p>

      <p>
        <strong><%= @language['Expected Date of Completion'] %>:</strong>
        <%= @bmet_work_order.date_expire %>
      </p>

      <p>
        <strong><%= @language['Date Completed'] %>:</strong>
        <%= @bmet_work_order.date_completed %>
      </p>

      <p>
        <strong><%= @language['Request Type'] %>:</strong>
        <%= @bmet_work_order.request_type %>
      </p>

      <p>
        <strong>Item:</strong>
        <%= @bmet_work_order.item_id %>
     </p>

      <p>
        <strong><%= @language['Cost'] %>:</strong>
        <%= @bmet_work_order.cost %>
      </p>

      <p>
        <strong><%= @language['Description'] %>:</strong>
        <%= @bmet_work_order.description %>
      </p>

      <p>
        <strong><%= @language['Owner'] %>:</strong>
        <%= @bmet_work_order.owner_id %>
      </p>

      <p>
        <strong><%= @language['Requester'] %>:</strong>
        <%= @bmet_work_order.requester_id %>
      </p>

      <p>
        <strong><%= @language['Cause Description'] %>:</strong>
        <%= @bmet_work_order.cause_description %>
      </p>

      <p>
        <strong><%= @language['Action Taken'] %>:</strong>
        <%= @bmet_work_order.action_taken %>
      </p>

      <p>
        <strong><%= @language['Prevention Taken'] %>:</strong>
        <%= @bmet_work_order.prevention_taken %>
      </p>
    </div>

    <div class='right-attributes'>
      <p class='status'>
        <strong><%= @language['Status'] %>:</strong>
        <%= @bmet_work_order.status %>
      </p>
    </div>
  </div>
  <p> <span class="comment-title"> <%= @language['Recent Comments'] %> </span>
  <form class="create-comment" action="/bmet_work_order_comments/new" method="GET"> <input type="hidden" name="id" value=<%= @bmet_work_order.id %>> </input> <input type="submit" value=<%= '+ '+@language['Comment'] %> />
  </form>
  </p>
  <div class="comment"> 
	  <table>
		  <thead>
			  <th class="comment-table-header"><%= @language['Time Created'] %></th>
			  <th class="comment-table-header"><%= @language['Last Updated'] %></th>
			  <th class="comment-table-header"><%= @language['User ID'] %> </th>
			  <th><%= @language['Content'] %> </th>
		  </thead>
		  <tbody>
			  <% @wr_comment.each do |comment| %>
				  <tr>
					  <td> <%= comment.created_at %> </td>
					  <td> <%= comment.updated_at %> </td>
					  <td> <%= comment.user_id %> </td>
					  <td> <%= comment.comment_text %> </td>
				  </tr>
			  <% end %>
		  </tbody>
	  </table>
  </div>
</div>

