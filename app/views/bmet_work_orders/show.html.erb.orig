<div class='wr'>
  <%= link_to t(:edit).capitalize, edit_bmet_work_order_path(@bmet_work_order) %>
  <div class='attributes'>
    <div class='left-attributes'>
      <p id="notice"><%= notice %></p>

      <p>
        <strong><%= t(:date_requested).titlecase %>:</strong>
        <%= @bmet_work_order.date_requested %>
      </p>

      <p>
        <strong><%= t(:expected_date_of_completion).titlecase %>:</strong>
        <%= @bmet_work_order.date_expire %>
      </p>

      <p>
        <strong><%= t(:date_completed).titlecase %>:</strong>
        <%= @bmet_work_order.date_completed %>
      </p>

      <p>
        <strong><%= t(:request_type).titlecase %>:</strong>
        <%= @bmet_work_order.request_type %>
      </p>

      <p>
        <strong>Item:</strong>
        <%= @bmet_work_order.item_id %>
     </p>

      <p>
        <strong><%= t(:cost).capitalize %>:</strong>
        <%= @bmet_work_order.cost %>
      </p>

      <p>
        <strong><%= t(:description).capitalize %>:</strong>
        <%= @bmet_work_order.description %>
      </p>

      <p>
        <strong><%= t(:owner).capitalize %>:</strong>
        <%= @bmet_work_order.owner_id %>
      </p>

      <p>
        <strong><%= t(:requester).capitalize %>:</strong>
        <%= @bmet_work_order.requester_id %>
      </p>

      <p>
        <strong><%= t(:cause_description).titlecase %>:</strong>
        <%= @bmet_work_order.cause_description %>
      </p>

      <p>
        <strong><%= t(:action_taken).titlecase %>:</strong>
        <%= @bmet_work_order.action_taken %>
      </p>

      <p>
        <strong><%= t(:prevention_taken).titlecase %>:</strong>
        <%= @bmet_work_order.prevention_taken %>
      </p>
    </div>

    <div class='right-attributes'>
      <p class='status'>
        <strong><%= t(:status).capitalize %>:</strong>
        <%= @bmet_work_order.status %>
      </p>
    </div>
  </div>
  <p> <span class="comment-title"> <%= t(:recent_comments).titlecase %> </span>
  <form class="create-comment" action="/bmet_work_order_comments/new" method="GET"> <input type="hidden" name="id" value=<%= @bmet_work_order.id %>> </input> <input type="submit" value=<%= '+ '+t(:comment).capitalize %> />
  </form>
  </p>
  <div class="comment"> 
	  <table>
		  <thead>
			  <th class="comment-table-header"><%= t(:time_created).titlecase %></th>
			  <th class="comment-table-header"><%= t(:last_updated).titlecase %></th>
			  <th class="comment-table-header"><%= t(:user_id).titlecase %> </th>
			  <th><%= t(:content).capitalize %> </th>
		  </thead>
		  <tbody>
			  <% @wr_comment.each do |comment| %>
				  <tr>
					  <td> <%= comment.created_at %> </td>
					  <td> <%= comment.updated_at %> </td>
					  <td> <%= comment.user_id %> </td>
					  <td> <%= comment.comment_text %> </td>
				  </tr>
			  <% end %>
		  </tbody>
	  </table>
  </div>
</div>

