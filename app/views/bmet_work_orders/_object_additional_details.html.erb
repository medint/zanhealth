<!--fill in with names of boxes-->
<div id="object_extra-details">


<ul class="extra-details_nav">
  <li id ="comment-icon" class="active"><a href="#comment" data-toggle="tab">Comment</a></li>
  <li id="cost-icon"><a href="#cost" data-toggle="tab">Cost</a></li>
  <li id="labor-icon"><a href="#labor" data-toggle="tab">Labor Hours</a></li>
</ul>


<!-- Tab panes -->
<div class="tab-content">
  <div class="tab-pane active" id="comment">    
    <div class="extra-details_content">
      <div class='extra-details_title'>
        <%= t(:comments).capitalize %>
      </div>
    	<ul id='extra-details_comment_ul'>
        <%= render @bmet_work_order_comments %>
      </ul>
    </div>
      <%= render 'bmet_work_order_comments/comment_new' %>
  </div>
  <div class="tab-pane" id="cost">
    <div class="extra-details_content">
      <div class='extra-details_title'>
        <%= t(:costs).capitalize %>
      </div>
      <table id="costs_table">
      <!-- <ul id='extra-details_comment_ul'> -->
	      <%= render @bmet_costs %>
      <!-- </ul> -->
        <tr>
          <td><%= t(:total).capitalize %></td>
          <td></td>
          <td></td>
          <td></td>  
          <td></td>
          <td>$</td>
          <td><%= @bmet_costs_sum %></td>
          <td></td>
        </tr>
      </table>
    </div>      
      <%= render 'bmet_costs/bmet_cost_form' %>
  </div>
  <div class="tab-pane" id="labor">
    <div class="extra-details_content">
      <div class='extra-details_title'>
        <%= t(:labor_hours).titlecase %>
      </div>
      <ul id='extra-details_comment_ul'>
        <%= render @bmet_labor_hours %>
        <li class="facility_labor_hour">      
            <div class="labor_hour-technician">
              Total
            </div>
            <div class="labor_hour-detail">
              <span class="labor_hour-date"></span>  
              <span class="labor_hour-duration"><%= @bmet_labor_hours_sum %></span>

            </div>
        </li>
      </ul>
    </div>
  	 <%= render :partial => 'bmet_labor_hours/bmet_labor_hour_form' %>
  </div>
</div>

</div>






