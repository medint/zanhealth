        $('#success > .alert-success')
        .append('</div>');
        $('#submit-button').remove()
      }

    $(document).ready(function(){
        $('#demo-form').bootstrapValidator({
          feedbackIcons: {
            valid: 'glyphicon glyphicon-ok',
            invalid: 'glyphicon glyphicon-remove',
            validating: 'glyphicon glyphicon-refresh'
          },
          fields: {
          "entry.1309549057": { //Hospital name
            validators:{
             notEmpty: {
              message:'Please enter the name of the hospital.'
            }
            }
          },
          "entry.1356326089": { //Hospital location
            validators:{
              notEmpty: {
                message: 'Please enter the location of the hospital (Country/city).'
              }
            }
          },
          "entry.115100805":{ //Their name
            validators:{
              notEmpty: {
                message: 'Please enter your name.'
              }
            }
          },
          "entry.126041519":{ //Role
            validators:{
              notEmpty:{
                message: 'Please enter your role in the hospital.'
              }
            }
          },
          "entry.943370828": { //Email
            validators: {
              notEmpty: {
                message: 'The email address is required and cannot be empty'
              },
              emailAddress: {
                message: 'Please enter a valid email address.'
              }
            }
          }
        }
    })
     .on('success.form.bv', function(e){
      e.preventDefault();
      var $form = $(e.target);
      // var bv = $form.data('bootstrapValidator');
      hideButton();
      $.post($form.attr('action'), $form.serialize(), function(result){return null;})
      })
    })

</script>

