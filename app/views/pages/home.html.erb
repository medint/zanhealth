  <script type="text/javascript">

    function hideButton(){
      $('#success').html("<div id = submit-button class='alert alert-success'>");
        // $('#submit-button > .alert-success').html("<button type='button' class='close' data-dismiss='alert' aria-hidden='true'>&times;")
